{
    "version": "2.0.0",
    "tasks": [
        {
        "label": "Run on Tim",
        "type": "shell",
        "command": "pybricksdev.exe",
        "args": [
            "run",
            "ble",
            "--name",
            "Tim",
            "${file}"
            ],
        "problemMatcher": ["$eslint-stylish"],
        "presentation": {
            "echo": true,
            "reveal": "silent",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": false,
            "clear": false,
            "revealProblems": "onProblem",
            "close": true
            }
        }
    ]
}
