{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run on robot",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/pybricksdev.exe",
            "args": [
                "run",
                "ble",
                "--name",
                "${env:robotName}",
                "${file}"
            ],
            "problemMatcher": {
                "owner": "python",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*)File(.*)(C:(.*)\\.py)(.*)(line(\\s*))([0-9]+),",
                    "file": 3,
                    "line": 8
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "revealProblems": "onProblem"
            }
        },
